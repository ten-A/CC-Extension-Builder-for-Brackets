<?xml version="1.0" encoding="UTF-8"?>

<ExtensionManifest Version="4.0" ExtensionBundleId="${extid}" ExtensionBundleVersion="1.0.0"
		ExtensionBundleName="${extname}" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<Author><![CDATA[${authname}]]></Author>
	<Abstract><![CDATA[]]></Abstract>
	<ExtensionList>
		<Extension Id="${extid}" Version="1.0" />
	</ExtensionList>
	<ExecutionEnvironment>
		<HostList>
            ${host}
		</HostList>
		<LocaleList>
			<Locale Code="All" />
		</LocaleList>
		<RequiredRuntimeList>
			<RequiredRuntime Name="CSXS" Version="4.0" />
		</RequiredRuntimeList>
	</ExecutionEnvironment>
	<DispatchInfoList>
		<Extension Id="${extid}">
			<DispatchInfo >
				<Resources>
				<MainPath>./index.html</MainPath>
				<ScriptPath>./jsx/hostscript.jsx</ScriptPath>
				</Resources>
				<Lifecycle>
					<AutoVisible>true</AutoVisible>
				</Lifecycle>
				<UI>
					<Type>Panel</Type>
					<Menu>${extname}</Menu>
					<Geometry>
						<Size>
							<Height>${height}</Height>
							<Width>${width}</Width>							
						</Size>
						<MaxSize>
							<Height>${maxheight}</Height>
							<Width>${maxwidth}</Width>
						</MaxSize>
						<MinSize>
							<Height>${minheight}</Height>
							<Width>${minwidth}</Width>
						</MinSize>						
					</Geometry>
				</UI>
			</DispatchInfo>
		</Extension>
	</DispatchInfoList>
</ExtensionManifest>